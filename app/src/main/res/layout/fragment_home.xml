<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  Start hello gusyam  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/text_create_account"
                android:layout_marginTop="12dp">
                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="100dp"
                    android:layout_height="57dp"
                    android:src="@drawable/icon_profile_temporary" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Hello, GusYam"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--  end hello gusyam  -->

            <!--  start search bar  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Try 'Friend rice' or 'Pak gembus'"
                    android:background="@android:color/transparent"
                    android:textColor="#ACACAC"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/tune_24dp_e3e3e3"
                    android:contentDescription="Filter" />
            </LinearLayout>
            <!-- end search bar -->

            <!-- start description in homepage -->
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textSize="36sp"
                android:text="Letâ€™s Explore Your Favorite Recipe"
                android:textColor="#93C47D" />
            <!-- end description in homepage -->

            <!-- start category food -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                <!-- Vegetable -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_vegetable"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetable"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Meat -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_meat"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meat"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Drink -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_drink"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drink"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Seafood -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_fish"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seafood"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Snack -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_snack"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snack"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- end category food -->

            <!-- start card food -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    <!-- start card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="245dp"
                        android:backgroundTint="@color/green"

                        >
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            >
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_user_temporary" />
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="Pak Gembus"
                                android:textColor="#111111"
                                android:layout_gravity="center"
                                android:layout_marginLeft="12dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- end card -->

                </LinearLayout>
            </ScrollView>
            <!-- end card food -->

        </LinearLayout>
    </ScrollView>

</FrameLayout>