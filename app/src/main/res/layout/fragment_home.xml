<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  Start hello gusyam  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/text_create_account"
                android:layout_marginTop="12dp">
                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="100dp"
                    android:layout_height="57dp"
                    android:src="@drawable/icon_profile_temporary" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Hello, GusYam"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--  end hello gusyam  -->

            <!--  start search bar  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Try 'Friend rice' or 'Pak gembus'"
                    android:background="@android:color/transparent"
                    android:textColor="#ACACAC"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/tune_24dp_e3e3e3"
                    android:contentDescription="Filter" />
            </LinearLayout>
            <!-- end search bar -->

            <!-- start description in homepage -->
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textSize="36sp"
                android:text="Letâ€™s Explore Your Favorite Recipe"
                android:textColor="#93C47D" />
            <!-- end description in homepage -->

            <!-- start category food -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                <!-- Vegetable -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_vegetable"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetable"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Meat -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_meat"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meat"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Drink -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_drink"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drink"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Seafood -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_fish"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seafood"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Snack -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="12dp"
                        android:src="@drawable/icon_snack"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snack"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- end category food -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Recipes"
                android:textSize="19dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <!-- start card food -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- start card -->
                    <androidx.cardview.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/green">

                            <!-- Pembuat -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icon_user_temporary"
                                    android:layout_marginEnd="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pak Gembus"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <!-- Gambar makanan + label kategori -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_nasi_goreng" />

                                <!-- Label kategori -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:paddingHorizontal="15dp"
                                    android:paddingVertical="4dp"
                                    android:background="@drawable/bg_rounded_label"
                                    android:text="Meat"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>
                            </FrameLayout>

                            <!-- Nama Resep -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nasi Goreng Sapi Bali"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- end card -->

                    <!-- start card 2-->
                    <androidx.cardview.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/green">

                            <!-- Pembuat -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icon_user_temporary"
                                    android:layout_marginEnd="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pak Gembus"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <!-- Gambar makanan + label kategori -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_nasi_goreng" />

                                <!-- Label kategori -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:paddingHorizontal="15dp"
                                    android:paddingVertical="4dp"
                                    android:background="@drawable/bg_rounded_label"
                                    android:text="Meat"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>
                            </FrameLayout>

                            <!-- Nama Resep -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nasi Goreng Sapi Bali"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- end card -->
                </LinearLayout>
            </ScrollView>
            <!-- end card food -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cooking Techniques"
                android:textSize="19dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- start cooking techniques -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- start techniques -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Image method -->
                            <ImageView
                                android:id="@+id/imageMethod"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_cooking_techniques"
                                android:background="@drawable/image_rounded"
                                android:clipToOutline="true" />

                            <!-- Method title with icon -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/bg_white_rounded_shadow"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:elevation="4dp"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/cook_tools" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deep Frying"
                                    android:textStyle="bold"
                                    android:layout_marginStart="8dp"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <!-- Description -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Deep frying is a cooking method that involves submerging food in hot oil..."
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:layout_marginBottom="12dp" />

                            <!-- More button -->
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More"
                                android:textColor="@android:color/white"
                                android:background="@drawable/bg_green_rounded"
                                android:textSize="14sp"
                                android:paddingHorizontal="24dp"
                                android:paddingVertical="6dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- start techniques -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Image method -->
                            <ImageView
                                android:id="@+id/imageMethod1"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_cooking_techniques"
                                android:background="@drawable/image_rounded"
                                android:clipToOutline="true" />

                            <!-- Method title with icon -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/bg_white_rounded_shadow"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:elevation="4dp"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/cook_tools" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deep Frying"
                                    android:textStyle="bold"
                                    android:layout_marginStart="8dp"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <!-- Description -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Deep frying is a cooking method that involves submerging food in hot oil..."
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:layout_marginBottom="12dp" />

                            <!-- More button -->
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More"
                                android:id="@+id/moreTechniques"
                                android:textColor="@android:color/white"
                                android:background="@drawable/bg_green_rounded"
                                android:textSize="14sp"
                                android:paddingHorizontal="24dp"
                                android:paddingVertical="6dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- end techniques -->
                </LinearLayout>
            </ScrollView>
            <!-- end cooking techniques -->

        </LinearLayout>
    </ScrollView>

</FrameLayout>