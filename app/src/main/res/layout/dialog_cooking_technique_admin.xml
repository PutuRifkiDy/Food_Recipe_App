<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- start add cooking technique title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/text_cooking_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputCookingTechniqueTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Cooking Technique Title"
                android:padding="10dp" />
        </LinearLayout>
        <!-- end add cooking technique title -->

        <!-- start add cooking technique description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/text_cooking_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputCookingTechniqueDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Cooking Technique Description"
                android:padding="10dp" />
        </LinearLayout>
        <!-- end add cooking technique description -->

        <!-- start add cooking technique method -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/text_cooking_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Method"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputCookingTechniqueMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Cooking Technique Method"
                android:padding="10dp" />
        </LinearLayout>
        <!-- end add cooking technique method -->

        <!-- start add up file -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Path Image"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/uploadContainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iconAddImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/add_file" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Choose your file"
                    android:textColor="#999" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </LinearLayout>
        <!-- end add file -->

    </LinearLayout>
</ScrollView>
